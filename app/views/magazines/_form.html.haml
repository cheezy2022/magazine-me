= form_for @magazine do |f|
  -if @magazine.errors.any?
    #error_explanation
      %h2= "#{pluralize(@magazine.errors.count, "error")} prohibited this magazine from being saved:"
      %ul
        - @magazine.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :publication_date
    = f.date_select :publication_date
  .actions
    = f.submit 'Save'
