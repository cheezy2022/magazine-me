= form_for [@magazine, @issue, @page] do |f|
  -if @page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :page_number
    = f.number_field :page_number
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
